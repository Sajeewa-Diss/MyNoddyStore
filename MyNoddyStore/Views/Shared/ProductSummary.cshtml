@model MyNoddyStore.Entities.Product

<form>
    <div class="well well-sm mainchilddiv" name="mainchilddiv">

        <div class="myimg">
            <img class="myimg" src="@Url.Content(String.Format("~/Images/{0}.png", Model.Picture))" alt="No Image" />
        </div>
        <div class="myname">
            <strong>@Model.Name</strong><span>Stock:@Model.StockCount.ToString()</span>
        </div>
        <div class="mystockmsg">
            <span name="statusmsgspan" class="stock-message">hello</span>
        </div>
        <div class="mystatusmsg">
            <span name="stockmsgspan" class="status-message" style="position: absolute; display:inline">goodbye</span>
        </div>
        <div class="myprice">
            <span class="label label-primary">@Model.Price.ToString("c")</span>
        </div>

        <div class="mydesc">
            <span class="lead">@Model.Description @* todo add @Model.ShortDescription*@</span>
        </div>
        <div class="quantity">
            <span>Quantity</span>
            <button class="minus-btn" type="button" name="minusbutton">
                <img src="Images/minus.svg" alt="-" />
            </button>
            <input type="text" class="textclass" name="MyQuantity" size="1" width="50" readonly="readonly" value="@Model.MyQuantity.ToString()">
            <button class="plus-btn" type="button" name="plusbutton">
                <img src="Images/plus.svg" alt="+" />
            </button>
        </div>
        <div class="myupdbtn">
            @Html.HiddenFor(x => x.ProductID)
            @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
            @Html.Hidden("pageNumber", (object)ViewBag.pageNumber)
            @Html.Hidden("categoryString", (object)ViewBag.categoryString)
            <input type="submit" name="submitUpdate" id="btnUpdate" class="btn btn-success update-btn-class" value="Update" disabled="disabled" />
        </div>
        <div class="myviewbtn">
            <input type="submit" name="submitCheckout" id="btnCheckout" class="btn btn-success" value="View cart" /> @*todo rename this button*@
        </div>

    </div>
</form>

