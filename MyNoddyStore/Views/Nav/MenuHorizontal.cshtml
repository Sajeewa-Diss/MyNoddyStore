@model IEnumerable<string>

<div class="btn-group btn-group-sm btn-group-justified">
    @Html.ActionLink(linkText: "Home", actionName: "Index", controllerName: "Home", routeValues: null, htmlAttributes: new { @class = "btn btn-default btn-sm" })
    @Html.ActionLink(linkText: "All", actionName: "List", controllerName: "Product", routeValues: null, htmlAttributes: new { @class = "btn btn-default btn-sm" })


    @foreach (var link in Model)
    {
        @Html.RouteLink(link, new {
        controller = "Product",
        action = "List",
        category = link,
        page = 1
        }, new {
        @class = "btn btn-default btn-sm"
        + (link == ViewBag.SelectedCategory ? " btn-primary" : "")
        })  }
</div>
